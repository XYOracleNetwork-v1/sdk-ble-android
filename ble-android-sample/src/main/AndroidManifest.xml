<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="network.xyo.ble.sample">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="network.xyo.ble.sample.XYApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:allowBackup="false"
        android:supportsRtl="true">
        <activity
            android:name="network.xyo.ble.sample.activities.XYOAppActivity" android:theme="@style/XYTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="network.xyo.ble.sample.fragments.CentralFragment" android:theme="@style/XYTheme" />
        <activity
            android:name="network.xyo.ble.sample.activities.XYODeviceActivity" android:theme="@style/XYTheme" />

        <activity
            android:name="network.xyo.ble.sample.fragments.ServerFragment" android:theme="@style/XYTheme" />

        <activity
            android:name="network.xyo.ble.sample.activities.XYOTestActivity" android:theme="@style/XYTheme" />

    </application>

</manifest>